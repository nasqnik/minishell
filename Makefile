export HEADER

all: $(NAME)
	@echo ""
	@echo "$$HEADER"

bonus: $(BONUS_OBJ) $(LIBFT)
	$(CC) $(CFLAGS) $(BONUS_OBJ) $(LIBFT) $(RLDIR) $(RLINC) $(RLFLAGS) -o $(BONUS)
	@echo ""
	@echo "$$HEADER"

$(NAME): $(OBJ) $(LIBFT)
	$(CC) $(CFLAGS)  $(OBJ) $(LIBFT) $(RLDIR) $(RLINC) $(RLFLAGS) -o $(NAME)

$(LIBFT):
	make all -C libft

%.o: %.c
	$(CC) $(CFLAGS) $(RLINC) -c $< -o $@

clean:
	rm -f $(OBJ) $(BONUS_OBJ)
	make clean -C libft

fclean: clean
	rm -f $(NAME) $(BONUS)
	make fclean -C libft

re: fclean all 

