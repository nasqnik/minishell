NAME = minishell
CC = cc
CFLAGS = -Wall -Wextra -Werror -g3
LIBFT = libft/libft.a

RLFLAGS		=	-lreadline -lhistory
RLDIR		=	-L/opt/vagrant/embedded/lib
RLINC		=	-I/opt/vagrant/embedded/include/readline/readline.h


